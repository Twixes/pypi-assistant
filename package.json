{
    "name": "pypi-assistant",
    "displayName": "PyPI Assistant",
    "description": "pip requirements files now enhanced with up-to-date package information at a glance",
    "license": "MIT",
    "publisher": "twixes",
    "author": "Twixes",
    "version": "1.1.2",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "pip requirements",
        "python",
        "requirements.txt"
    ],
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:pip-requirements"
    ],
    "main": "./out/main.js",
    "contributes": {
        "configuration": {
            "title": "PyPI Assistant",
            "properties": {
                "pypiAssistant.codeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable latest package version CodeLens in `pip-requirements` files."
                }
            }
        }
    },
    "scripts": {
        "prepare": "husky install",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "compile": "tsc -p ./",
        "format": "prettier --write .",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "9.1.0",
        "@types/node": "^17.0.21",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "esbuild": "^0.14.25",
        "eslint": "^8.10.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.1",
        "prettier": "^2.5.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "dayjs": "^1.10.8",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.5",
        "node-fetch": "^2.6.7"
    },
    "extensionDependencies": [
        "ms-python.python"
    ],
    "bugs": {
        "url": "https://github.com/Twixes/pypi-assistant/issues",
        "email": "dev@twixes.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Twixes/pypi-assistant.git"
    },
    "homepage": "https://github.com/Twixes/pypi-assistant/blob/master/README.md",
    "lint-staged": {
        "*.{ts,yml,yaml,json,md}": "prettier --write",
        "*.ts": "eslint --fix"
    }
}
